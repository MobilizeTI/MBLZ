<odoo>
    <record id="res_config_settings_view_mblz_api_form" model="ir.ui.view">
        <field name="name">res_config_settings_view_mblz.api.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Mobilize Api" string="Mobilize Api" data-key="mblz_Api">
                    <h2>Mobilize Api</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane" />
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Mobilize Api</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img" />
                                <div class="text-muted">
                                    Define url to connect to Mobilize Api
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="mblz_api_url" string="URL" class="col-2 o_light_label" />
                                        <field name="mblz_api_url" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>