<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record model="ir.ui.view" id="mblz_view_project_kanban">
            <field name="name">mblz_project.project.kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="label_tickets"/>
                    <field name="tickets_count"/>
                </xpath>

                <xpath expr="//div[hasclass('o_project_kanban_boxes')]" position="inside">
                    <a class="o_project_kanban_box"
                       name="action_view_tickets" type="object" t-if="record.tickets_count.raw_value">
                        <div>
                            <span class="o_value"><t t-esc="record.tickets_count.value"/></span>
                            <span class="o_label"><t t-esc="record.label_tickets.value"/></span>
                        </div>
                    </a>
                </xpath>

                <xpath expr="//div[@t-if='record.doc_count.raw_value']" position="after">
                    <div role="menuitem" t-if="record.tickets_count.raw_value">
                        <a name="action_view_tickets" type="object">Tickets</a>
                    </div>
                </xpath>


            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="mblz_edit_project" model="ir.ui.view">
            <field name="name">mblz_project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='label_tasks']" position="after">
                    <field name="label_tickets"
                           invisible="1"
                           string="Name of the tickets"/>
                </xpath>

                <xpath expr="//button[hasclass('oe_stat_button')][2]" position="after">
                    <button class="oe_stat_button" type="action"
                            name="%(mblz_helpdesk_ticket_action_project)d" icon="fa-ticket"
                            attrs="{'invisible': [('tickets_count','==',0)]}"
                    >
                        <field string="Tickets" name="tickets_count" widget="statinfo"
                               options="{'label_field': 'label_tickets'}"/>

                    </button>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="project_task_form">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="before">
                    <field name="custom_task_state" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_tree">
            <field name="name">project.task.tree</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='activity_ids']" position="before">
                    <field name="custom_task_state" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>