<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form View to Modify it -->

    <record id="project_task_view_search_inherit" model="ir.ui.view">
        <field name="name">project.task.view.search.inherit.sale.timesheet.enterprise.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='personal_stage']" position='after'>
                <filter string="Parent Task" name="parent_task"
                        context="{'group_by': 'parent_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_task_tree2_inherited_mb" model="ir.ui.view">
        <field name="name">project.task.tree.inherited.mb</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position='after'>
                <field name="planned_date_begin"/>
                <field name="data_deadline"/>
            </xpath>
        </field>
    </record>
</odoo>
